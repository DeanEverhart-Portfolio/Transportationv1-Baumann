        <th>
            @*@Html.ActionLink("School", "Index", new { sortOrder = ViewBag.contactdesignator, currentFilter = ViewBag.CurrentFilter })*@

            @Html.DisplayNameFor(model => model.ContactDesignator2)
        </th>
