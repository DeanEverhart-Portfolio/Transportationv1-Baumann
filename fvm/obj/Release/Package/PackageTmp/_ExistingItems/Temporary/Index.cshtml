        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactAddressStreet1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactAddressStreetType1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactAddressCityTown)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactAddressZipCode)
        </th>
        <th></th>
    </tr>
    
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContactCategory)
        </td>
        <td>
            <a href=@Html.DisplayFor(modelItem => item.ContactWebsite)>@Html.DisplayFor(modelItem => item.ContactDesignator)</a>

            @*@Html.DisplayFor(modelItem => item.Contact.ContactDesignator)*@
        </td>
        <td>
            @*<a href=@Html.DisplayFor(modelItem => item.ContactWebsite)>@Html.DisplayFor(modelItem => item.ContactDesignator)</a>*@

