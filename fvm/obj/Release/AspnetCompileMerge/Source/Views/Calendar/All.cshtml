<table class="table">
    <tr>
        <th>
            @*@Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.calendardate, currentFilter = ViewBag.CurrentFilter })*@
            @Html.DisplayNameFor(model => model.CalendarDateStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalendarDateDayOfWeek)
        </th>
        <th>
            @Html.ActionLink("School Name", "Index", new { sortOrder = ViewBag.contactdesignator, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalendarDateItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalendarDateCategoryTimeDisplay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalendarDateAdditionalInformation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalendarDateDayOfWeekReturn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalendarDateReturn)
        </th>
        @*__________________________________________________*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CalendarDateStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalendarDateDayOfWeek)
            </td>
            <td>
                @*<a href=@Html.DisplayFor(modelItem => item.Contact.ContactCalendar)>@Html.DisplayFor(modelItem => item.Contact.ContactDesignator)</a>*@

                @Html.DisplayFor(modelItem => item.Contact.ContactNameFullDisplay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalendarDateItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalendarDateCategoryTimeDisplay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalendarDateAdditionalInformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalendarDateDayOfWeekReturn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalendarDateReturn)
            </td>
            @*__________________________________________________*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CalendarID }) |
                @Html.ActionLink("Details", "Details", new { id = item.CalendarID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CalendarID })
            </td>
        </tr>
    }
</table>
