    <td>
        @Html.DisplayFor(modelItem => item.Contact.ContactNameFullDisplay)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Contact.ContactPhone1Display)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Equipment.EquipmentText)
