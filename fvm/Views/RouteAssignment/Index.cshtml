    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.RouteAssignmentID }) |
        @Html.ActionLink("Details", "Details", new { id = item.RouteAssignmentID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.RouteAssignmentID })
    </td>
</tr>
