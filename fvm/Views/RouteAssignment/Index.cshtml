            Note
        </th>
        <th>
            Replacement
        </th>
        <th>
            Route
        </th>
        <th>
            Vehicle
        </th>
        <th>
            Radio
        </th>
        <th>
            Employee
        </th>
        <th>
            Contact
        </th>
        <th>
            Text
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Equipment.EquipmentStatusDisplay)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Equipment.EquipmentNote)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RouteAssignmentReplacement)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Route.RouteDesignator)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Equipment.EquipmentDesignatorVideo2Display)
